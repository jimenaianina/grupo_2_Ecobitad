<!DOCTYPE html>

<html lang = "es">

    <%- include ('../partials/head') %>

    <body>
    
        <%- include ('../partials/header') %>
        <script src="/js/register.js"></script>
<main>

    <img src="/img/2.jpg" alt="grass" class="img"> 
    
        <div class = "formularios">

            
            <form action = "/usuario/registro" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="name"> Nombre </label>
                    <p><input type="text" name="name" id="name" class="box" ></p>
                    <% if (locals.errors && errors.name) { %>
                        <p class="errores"> <%= errors.name %>  </p>
                        <% } %>   
                </div>
                <div>
                    <label for="lastName"> Apellido </label>
                    <p><input type="text" name="lastName" id="lastName" class="box" ></p>
                    <% if (locals.errors && errors.lastName) { %>
                        <p class="errores"> <%= errors.lastName %>  </p>
                        <% } %>
                </div>
                <div>
                    <label for="email"> E-mail </label>
                    <p><input type="email" name="email" id="email" class="box" ></p>
                    <% if (locals.errors && errors.email) { %>
                        <p class="errores"> <%= errors.email %>  </p>
                        <% } %>
                </div>
                <div> 
                    <label for="age"> Edad </label>
                    <p><input type="number" name="age" id="age" class="box" min="0" ></p>
                    <% if (locals.errors && errors.age) { %>
                        <p class="errores"> <%= errors.age %>  </p>
                        <% } %>
                <div>
                    <label for="city"> Ciudad </label>
                    <p><input type="text" name="city" id="city" class="box" ></p>
                    <% if (locals.errors && errors.city) { %>
                        <p class="errores"> <%= errors.city %>  </p>
                        <% } %>
                </div>
                <div>
                    <label for="password"> Contraseña </label>
                    <p><input type="password" name="password" id="password" class="box" ></p>
                    <% if (locals.errors && errors.password) { %>
                        <p class="errores"> <%= errors.password %>  </p>
                        <% } %>
                </div>
                <div>
                    <label for="image" class="picture"> Subí tu imagen </label>
                    <input type="file" name="image" id="file" class="picture">
                    <% if (locals.errors && errors.image) { %>
                        <p class="errores"> <%= errors.image %>  </p>
                        <% } %>
                </div>
                <p><button type="submit" class="btn"> Registrarse </button></p>
            </form>

        

        </div>
        
</main>
 
<%- include ('../partials/footer') %>

    </body>
        
</html>
        
        