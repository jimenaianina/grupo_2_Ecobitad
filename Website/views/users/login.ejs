<!DOCTYPE html>

<html lang = "es">
    
<%- include ('../partials/head') %>

    <body>
    
        <%- include ('../partials/header') %>
        <script src="/js/login.js"></script>
        
<main>

<div id="contenedor">

    <img src="/img/1.jpg" alt="oceano">

<div id= "formularios">

    <div class="errorsEV">
            <% if (locals.errors) { %>
                <% for (let error in errors ) { %>
                <p> <%= errors[error].msg %> </p>
             <% } %>
            <% } %>
        </div>
    
    <div class="errorsJV">
        <ul></ul>
    </div>

    <form action= "/usuario/acceder" method="POST">
        <div>
            <label for="email"> E-mail </label>
            <p><input type="email" placeholder="tu@e-mail.com" name="email" id= "email" class= "datosUser"></p>
        </div>

        <div>
            <label for="password"> Contraseña </label>
            <p><input type="password" id= "password" name="password" class= "datosUser"><p>
        </div>
        
        <button type="submit" class="btn"> Iniciar Sesión </button>
        <p><label for="rememberUser" class="rememberUser"><input type="checkbox" name="rememberUser" class="rememberUser"> Recordar usuario </label></p>
    </form>

    <div id = "olvido-contrasena"> 
        <p><a href= #> ¿Olvidaste tu contraseña? </a></p>
    </div>

    <div id = "nuevoUsuario"> 
        <p><a href= "/usuario/registro"> No tenés un usuario? Registrate! </a></p>
    </div>

</div>
</div>
</main>

<%- include ('../partials/footer') %>

</body>

</html>

