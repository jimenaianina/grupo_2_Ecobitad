<!DOCTYPE html>

<html lang = "es">

    <%- include ('../partials/head') %>

    <body>
    
        <%- include ('../partials/header') %>
        <script src="/js/editUser.js"></script>
<main>
    
        <div class = "formularios">

            <div class="errorsJV">
                <ul></ul>
            </div>
            
            <form action = "/usuario/actualizar/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="name"> Editar nombre </label>
                    <p><input type="text" name="name" id="name" class="box" value="<%= user.user_name %>" ></p>
                </div>
                <div>
                    <label for="lastName"> Editar apellido </label>
                    <p><input type="text" name="lastName" id="lastName" class="box" value="<%= user.last_name %>"></p>
                </div>
                <div>
                    <label for="email"> Editar E-mail </label>
                    <p><input type="email" name="email" id="email" class="box" value="<%= user.email %>"></p>
                </div>
                <div> 
                    <label for="age"> Editar edad </label>
                    <p><input type="number" name="age" id="age" class="box" min="0" value="<%= user.age %>"></p>
                <div>
                    <label for="city"> Editar ciudad </label>
                    <p><input type="text" name="city" id="city" class="box" value="<%= user.city %>"></p>
                </div>
                <div class="campo">
                    <label for="password"> Cambiar contraseña </label>
                    <p><input type="password" name="password" id="password" class="box">
                        <i class="far fa-eye"></i></p>
                </div>
                <div class="image">
                    <label for="image" class="picture"> Subí tu imagen </label>
                    <input type="file" name="image" id="file" class="picture">
                </div>
                <p><button type="submit" class="btn"> Guardar Cambios </button></p>
            </form>        

        </div>
        
</main>
 
<%- include ('../partials/footer') %>

    </body>
        
</html>
